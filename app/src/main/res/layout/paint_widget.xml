<?xml version="1.0" encoding="utf-8"?>
<merge
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="@color/colorGrey"
        android:layout_width="214dp"
        android:layout_height="156dp"
        tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <TextView
            android:id="@+id/tv_width_caption"
            android:text="@string/width_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/tv_width_value"
            android:text="@string/width_default_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <SeekBar
            android:id="@+id/seekbar_width"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:thumb="@drawable/seekbar_thumb"
            android:progressDrawable="@drawable/seekbar_progress"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_width_caption"
            android:layout_marginTop="16dp"/>

    <TextView
            android:id="@+id/tv_color_caption"
            android:text="@string/colors_caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/seekbar_width"
            android:layout_marginTop="20dp"/>

    <RadioGroup
            android:id="@+id/radio_btn_colors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="3dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_color_caption"
            android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.0">

        <RadioButton
                android:id="@+id/radio_btn_color1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:layout_marginStart="12dp"/>

        <RadioButton
                android:id="@+id/radio_btn_color2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:layout_marginStart="12dp"/>

        <RadioButton
                android:id="@+id/radio_btn_color3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:layout_marginStart="12dp"/>

        <RadioButton
                android:id="@+id/radio_btn_color4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:layout_marginStart="12dp"/>

    </RadioGroup>

</merge>